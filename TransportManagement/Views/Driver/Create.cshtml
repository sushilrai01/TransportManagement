@model TransportManagement.ViewModel.DriverInfoModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Driver</title>
    <link rel="icon" type="image/x-icon" href="~/Content/vehicle.png">
    <link rel="stylesheet" type="text/css" href="~/Content/site.css" />
</head>
<body>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <div class="container">
        <div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-Horizontal">
                    <h4>Add Driver</h4>
                    <hr />

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                            @Html.LabelFor(model => model.driverModel.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.driverModel.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.driverModel.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.driverModel.ContactNo, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.driverModel.ContactNo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.driverModel.ContactNo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.driverModel.DateAvailable, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.driverModel.DateAvailable, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.driverModel.DateAvailable, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group"> 
                        @Html.LabelFor(model => model.driverModel.RouteId,"Travel Route", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.driverModel.RouteId, new SelectList(Model.DropList,"ID","Text"),"Select Route", new { @class = "form-control"})
                            @Html.ValidationMessageFor(model => model.driverModel.RouteId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</body>
</html>
