@model TransportManagement.ViewModel.TxModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Transport Details</title>
    <link rel="icon" type="image/x-icon" href="~/Content/vehicle.png">
    <link rel="stylesheet" type="text/css" href="~/Content/site.css" />
</head>
<body>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <div class="container">
        <div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-Horizontal">
                    <h4>Add Transport Details</h4>
                    <hr />

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.MODEL.TypeID, "Vehicle Type", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.MODEL.TypeID, new SelectList(Model.TypeList, "ID", "Text"), "Select Medium", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MODEL.TypeID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MODEL.DriverID, "Driver", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.MODEL.DriverID, new SelectList(Model.DriverList, "ID", "Text"), "Select Driver", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MODEL.DriverID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MODEL.RouteID, "Route Taken", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.MODEL.RouteID, new SelectList(Model.RouteList, "ID", "Text"), "Select Route", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MODEL.RouteID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MODEL.Date, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MODEL.Date, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MODEL.Date, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MODEL.Passengers, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MODEL.Passengers, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MODEL.Passengers, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Edit" class="btn btn-default" />
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</body>
</html>
