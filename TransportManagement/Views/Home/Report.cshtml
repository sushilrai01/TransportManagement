@model IEnumerable<TransportManagement.ViewModel.TransportRouteModel>

<h2>Transport Report</h2>
@*<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }
</style>*@
<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

<p>
    @Html.ActionLink("Go To Homepage", "Index") | @Html.ActionLink("Add New Travels & Tours", "Create", "Transport")
</p>
<div class="table-responsive">

    <table class="table table-bordered table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TransportId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Origin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Passengers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TransportId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DriverName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Origin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destination)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Passengers)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Transport", new { id = item.TransportId }, null) |
                    @Html.ActionLink("Delete", "Delete", "Transport", new { id = item.TransportId }, null)

                </td>
            </tr>
        }

    </table>
</div>
